if game.CoreGui:FindFirstChild("KaitanGUI") then
    game.CoreGui.KaitanGUI:Destroy()
end

getgenv().ScriptMode = "Kaitan"
local toggle = false

local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "KaitanGUI"
ScreenGui.Parent = game.CoreGui

local Frame = Instance.new("Frame")
Frame.Parent = ScreenGui
Frame.Size = UDim2.new(0, 120, 0, 50)
Frame.Position = UDim2.new(0.05, 0, 0.2, 0)
Frame.BackgroundColor3 = Color3.fromRGB(30,30,30)
Frame.Active = true
Frame.Draggable = true
Frame.BorderSizePixel = 0
Frame.BackgroundTransparency = 0.1
Frame.Visible = true

local UICorner = Instance.new("UICorner")
UICorner.CornerRadius = UDim.new(0,12)
UICorner.Parent = Frame

local Button = Instance.new("TextButton")
Button.Parent = Frame
Button.Size = UDim2.new(1, -10, 1, -10)
Button.Position = UDim2.new(0,5,0,5)
Button.Text = "OFF"
Button.BackgroundColor3 = Color3.fromRGB(120,0,0)
Button.TextColor3 = Color3.fromRGB(255,255,255)
Button.Font = Enum.Font.SourceSansBold
Button.TextSize = 20

local UICorner2 = Instance.new("UICorner")
UICorner2.CornerRadius = UDim.new(0,10)
UICorner2.Parent = Button

Button.MouseButton1Click:Connect(function()
    toggle = not toggle
    if toggle then
        getgenv().ScriptMode = "Kaitan"
        Button.Text = "ON"
        Button.BackgroundColor3 = Color3.fromRGB(0,120,0)
    else
        getgenv().ScriptMode = "Off"
        Button.Text = "OFF"
        Button.BackgroundColor3 = Color3.fromRGB(120,0,0)
    end
end)

loadstring(game:HttpGet("https://bonkhub.online/loader.lua",true))()

local player = game.Players.LocalPlayer
local VirtualUser = game:GetService("VirtualUser")

player.Idled:Connect(function()
    VirtualUser:CaptureController()
    VirtualUser:ClickButton2(Vector2.new())
end)

task.spawn(function()
    while task.wait(30) do
        local char = player.Character
        if char and char:FindFirstChild("HumanoidRootPart") then
            char.HumanoidRootPart.CFrame = char.HumanoidRootPart.CFrame * CFrame.new(0, 0, 0.01)
        end
    end
end)
